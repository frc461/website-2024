  User â€¢ <%= @user.name %>
<% end %>

<div class="card">
  <div class="card-header text-center">
    <h1><%= @user.name %></h1>
  </div>
  <div class="card-body">
    <div class="col col-md-6 mx-auto">
      <h2 class="mb-3">Basic Information</h2>
      <p><b>Email</b>: <%= @user.email %></p>
      <p><b>Admin</b>: <%= @user.admin %></p>
      <p><b>Created At</b>: <%= @user.created_at %></p>
    </div>
  </div>
  <div class="card-footer">
    <div class="card-footer-btn-group">
      <%= link_to "Back to users", users_path, class: "btn" %>
      <%= link_to "Edit user", edit_user_path(@user), class: "btn" %>
      <%= link_to "Destroy user", @user, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn' %>
    </div>
  </div>
</div>
