<%= content_for :title do %>
  Dashboard
<% end %>

<div class="card">
  <div class="card-header">
    <h1 class="text-center">Welcome <b><%= current_user.name %></b>!</h1>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h3 class="text-center">Pages</h3>
          </div>
          <div class="card-body"></div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h3 class="text-center">Assets</h3>
          </div>
          <div class="card-body"></div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h3 class="text-center">Recent Activities</h3>
          </div>
          <div class="card-body"></div>
        </div>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <div class="card-footer-btn-group">
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn" %>
    </div>
  </div>
</div>
