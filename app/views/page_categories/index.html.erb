<%= content_for :title do %>
  All Page Categories
<% end %>

<div class="card">
  <div class="card-body">
    <h1 class="text-center">Page Categories</h1>
  </div>
</div>

<div class="row">
  <% @page_categories.each do |category| %>
    <div class="col-md-4 mb-3">
      <%= render category %>
    </div>
  <% end %>
</div>

<% if current_user %>
  <%= link_to "New page category", new_page_category_path, class: "btn btn-cardlike w-100" %>
  <%= link_to "Back to Dashboard", settings_dashboard_index_path, class: "btn btn-cardlike w-100" %>
<% end %>
