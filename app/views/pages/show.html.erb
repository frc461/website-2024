<div class="card">
  <div class="card-header">
    <h1><%= @page.title %></h1>
  </div>
  <div class="card-body">
    <%= render @page %>
  </div>
  <div class="card-footer">
    <div class="button-group">
      <%= link_to "Edit this page", edit_page_path(@page), class: 'btn btn-cardlike' %>
      <%= link_to "Back to pages", pages_path, class: 'btn btn-cardlike' %>
      <%= link_to "Destroy this page", @page, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-cardlike' %>
    </div>
  </div>
</div>
